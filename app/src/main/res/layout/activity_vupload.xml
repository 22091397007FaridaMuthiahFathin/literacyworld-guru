<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgv"
    tools:context="id.literacyworld.guru.VUpload">

    <!-- Judul di atas CardView -->
    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="350dp"
        android:text="Pilih Menu Video"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#000000" />

    <!-- Container untuk CardView dengan orientasi horizontal -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/titleTextView"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:gravity="center">

        <!-- CardView di kiri -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardSelectVideo"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="8dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="8dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/iconLeft"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerInParent="true"
                    android:contentDescription="Left Icon"
                    android:src="@drawable/video" />

                <TextView
                    android:id="@+id/textLeft"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iconLeft"
                    android:layout_centerHorizontal="true"
                    android:text="Pilih Video"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:paddingTop="4dp"/>

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <!-- CardView di tengah -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardUploadVideo"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="8dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="8dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/iconCenter"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/upload"
                    android:contentDescription="Center Icon"
                    android:layout_centerInParent="true"/>

                <TextView
                    android:id="@+id/textCenter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iconCenter"
                    android:layout_centerHorizontal="true"
                    android:text="Upload"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:paddingTop="4dp"/>

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <!-- CardView di kanan -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewVideos"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="8dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="8dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/iconRight"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/lihatvideo"
                    android:contentDescription="Right Icon"
                    android:layout_centerInParent="true"/>

                <TextView
                    android:id="@+id/textRight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iconRight"
                    android:layout_centerHorizontal="true"
                    android:text="Lihat Video"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:paddingTop="4dp"/>

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</RelativeLayout>
